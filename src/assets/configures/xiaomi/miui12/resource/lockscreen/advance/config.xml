	<!--数字选择-->
	<Group text="设置倒计时">
		<StringInput text="纪念日" id="djr1" default="圣诞节"/>
		<NumberInput text="年" id="y1111111" default="2016"/>
		<NumberInput text="月" id="m1" default="12"/>
		<NumberInput text="日" id="d1" default="26"/>
	</Group>
	
	<Group text="设置二维码，方便朋友添加为好友！在锁屏菜单-->更多中显示">
		<ImagePicker text="选择二维码图片" id="set_ewm"/>
	</Group>
	
	<Group text="进入锁屏设置的两种方法：1、调出锁屏左侧边下方设置按钮。2、主题风格-->分类-->混搭-->锁屏样式-->我的-->个性化定制当前锁屏">
	</Group>
	
	<Group>
		<StringInput text="反馈交流群（点击可复制）" id="123" default="309086344"/>
		<StringInput text="返现活动群（点击可复制）" id="321" default="56214986"/>
